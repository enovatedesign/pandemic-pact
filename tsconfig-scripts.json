{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./scripts/dist",
    "rootDir": "./scripts",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
