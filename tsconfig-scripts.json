{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./compiled-scripts",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts", "./app/api/helpers/search.ts"],
  "exclude": ["node_modules"]
}
